<% layout('layouts/boilerplate.ejs') %>
<div class="row">
  <h1 class="text-center py-3">Edit Campground</h1>
  <div class="col-md-6 offset-md-3 mt-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PUT"
      method="POST"
      class="validated-form"
      novalidate
      enctype="multipart/form-data"
    >
      <!-- TITLE -->
      <div class="mb-3">
        <b><label for="title" class="form-label">Title</label></b>
        <input
          type="text"
          id="title"
          class="form-control"
          name="campground[title]"
          value="<%= campground.title %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <!-- LOCATION -->
      <div class="mb-3">
        <b><label for="location" class="form-label">Location</label></b>
        <input
          type="text"
          id="location"
          class="form-control"
          name="campground[location]"
          value="<%= campground.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <!-- PRICE -->
      <div class="mb-3">
        <b><label for="price" class="form-label">Campground Price</label></b>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            id="price"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="campground[price]"
            value="<%= campground.price%>"
            required
          />
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <!-- DESCRIPTION -->
      <div class="mb-3">
        <b><label for="description" class="form-label">Description</label></b>
        <textarea
          class="form-control"
          id="description"
          rows="3"
          name="campground[description]"
          required
        >
<%= campground.description %>
      </textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <!-- ADD IMAGEs -->
      <div class="mb-3">
        <div class="input-group">
          <input
            type="file"
            class="form-control"
            name="image"
            id="image"
            multiple
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <!-- Existant images -->
      <div class="mb-3">
        <% campground.images.forEach(function(img, i) { %>
        <img src="<%=img.thumbnail%>" class="img-thumbnail" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            name="deleteImages[]"
            value="<%=img.filename%>"
            id="image-<%=i%>"
          />
        </div>
        <label for="image-<%=i%>">Delete?</label>

        <% }) %>
      </div>
      <!-- BUTTON -->
      <div class="mb-3 d-grid gap-2 d-md-inline-block">
        <button class="btn btn-success text-white">Update Campground</button>
        <a href="/campgrounds/<%= campground._id %> " class="btn btn-secondary"
          >Cancel</a
        >
      </div>
    </form>
  </div>
</div>
